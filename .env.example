# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# Option 1: Local MongoDB (make sure MongoDB is running locally)
MONGODB_URI=mongodb://localhost:27017/movweb

# Option 2: MongoDB Atlas (cloud) - uncomment and fill in your credentials
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/movweb?retryWrites=true&w=majority

# Option 3: Docker Compose (uncomment if using docker-compose up)
# MONGODB_URI=mongodb://mongo:27017/movweb

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=100mb

# Admin Credentials (for initial setup)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
